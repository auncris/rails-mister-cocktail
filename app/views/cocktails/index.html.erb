
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://res.cloudinary.com/dzs8kxzgt/image/upload/v1499442200/ohuty4xz4r7ocyrvgk8f.jpg');">
  <div class="banner-content">
    <h1>Cocktails</h1>
    <p>Would you like something to drink?</p>
  </div>
</div>

<div class = "text-center">
<%= link_to "Add a new Cocktail", new_cocktail_path %>
</div>

<div class = "wrapper padded" >
  <div class="container">
    <div class="row">

      <% @cocktails.each do |cocktail| %>

        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
              <div class="card-category">Popular</div>
              <div class="card-description">
                <h2><%= cocktail.name %></h2>
                <p><%= link_to "Try it!", cocktail_path(cocktail) %> </p>
               </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>














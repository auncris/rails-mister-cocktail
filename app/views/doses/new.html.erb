
<div class="container text-center">
  <div class= "form-group row col-md-12 col-form-label text-center">

    <%= form_for [@cocktail, @dose] do |f| %>
    <%= f.label  :description,  class: "form-control" %>
    <%= f.text_field :description, class: "form-control" %>

  </div>
  <div class= "form-group row col-form-label text-center"


    <%= f.label :ingredients , class: "form-control" %>
    <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name %>

 <%= f.button :submit, class: "btn btn-primary"  %>
<% end %>

  </div>
</div>
</div>

